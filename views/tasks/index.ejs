<!-- views/tasks/index.ejs -->
<!-- Tasks List Page - READ operation -->

<%- include('../partials/header') %>

<div class="container my-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5 fw-bold">
                <i class="fas fa-list-check me-2 text-primary"></i>My Tasks
            </h1>
            <p class="text-muted">Manage and track all your tasks in one place</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a href="/tasks/add" class="btn btn-primary btn-lg shadow">
                <i class="fas fa-plus me-2"></i>Add New Task
            </a>
        </div>
    </div>
    
    <!-- Task Statistics -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="stat-card card border-0 shadow-sm bg-info bg-opacity-10">
                <div class="card-body text-center">
                    <h3 class="text-info"><%= tasks.length %></h3>
                    <p class="mb-0 text-muted">Total Tasks</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card card border-0 shadow-sm bg-warning bg-opacity-10">
                <div class="card-body text-center">
                    <h3 class="text-warning">
                        <%= tasks.filter(task => task.status !== 'Completed').length %>
                    </h3>
                    <p class="mb-0 text-muted">Active Tasks</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card card border-0 shadow-sm bg-success bg-opacity-10">
                <div class="card-body text-center">
                    <h3 class="text-success">
                        <%= tasks.filter(task => task.status === 'Completed').length %>
                    </h3>
                    <p class="mb-0 text-muted">Completed</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Tasks List -->
    <% if (tasks.length === 0) { %>
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-5x text-muted mb-4"></i>
            <h3 class="text-muted mb-3">No tasks yet!</h3>
            <p class="text-muted mb-4">Get started by creating your first task.</p>
            <a href="/tasks/add" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>Create Your First Task
            </a>
        </div>
    <% } else { %>
        <div class="row g-4">
            <% tasks.forEach(task => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="task-card card h-100 shadow-sm border-0 hover-lift <%= task.status === 'Completed' ? 'completed-task' : '' %>">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <span class="badge priority-badge priority-<%= task.priority.toLowerCase() %>">
                                    <i class="fas fa-flag me-1"></i><%= task.priority %>
                                </span>
                                <span class="badge status-badge status-<%= task.status.toLowerCase().replace(' ', '-') %>">
                                    <%= task.status %>
                                </span>
                            </div>
                            
                            <h5 class="card-title fw-bold mb-2 <%= task.status === 'Completed' ? 'text-decoration-line-through text-muted' : '' %>">
                                <% if (task.status === 'Completed') { %>
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                <% } %>
                                <%= task.title %>
                            </h5>
                            
                            <% if (task.description) { %>
                                <p class="card-text text-muted mb-3">
                                    <%= task.description.length > 100 ? task.description.substring(0, 100) + '...' : task.description %>
                                </p>
                            <% } %>
                            
                            <% if (task.dueDate) { %>
                                <p class="card-text mb-3">
                                    <i class="fas fa-calendar-alt me-2 text-primary"></i>
                                    <small class="text-muted">
                                        Due: <%= new Date(task.dueDate).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %>
                                    </small>
                                </p>
                            <% } %>
                            
                            <div class="d-flex gap-2 mt-3">
                                <a href="/tasks/edit/<%= task._id %>" class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="fas fa-edit me-1"></i>Edit
                                </a>
                                <a href="/tasks/delete/<%= task._id %>" 
                                   class="btn btn-sm btn-outline-danger flex-fill" 
                                   onclick="return confirmDelete('<%= task.title %>')">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </a>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-transparent border-top-0">
                            <small class="text-muted">
                                <i class="fas fa-clock me-1"></i>
                                Created <%= new Date(task.createdAt).toLocaleDateString() %>
                            </small>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>